<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:theme="@style/AppTheme.Dark">

        <!-- masukkan toolbar disini -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:popupTheme="@style/AppTheme.Dark"
            app:title="Menu Utama"
            android:background="@color/primary"
            app:titleTextColor="@color/accenttext"
            app:titleCentered="true"
            android:elevation="45dp"
            />


    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/btntambahdata"
                android:backgroundTint="@color/primary"
                app:tint="@color/white"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.333"

                app:srcCompat="@drawable/tambahdata" />

            <ImageButton
                android:backgroundTint="@color/primary"
                app:tint="@color/white"
                android:id="@+id/btntambahdata4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.333"
                app:srcCompat="@drawable/caridatamhs" />

            <ImageButton

                android:backgroundTint="@color/primary"
                app:tint="@color/white"
                android:id="@+id/btntambahdata5"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.333"
                app:srcCompat="@drawable/lihatdata" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>